{
    "compilerOptions": {
        "outDir": "./dist",
        "pretty": true,
        "target": "es2015",
        "lib": [
            "es2015",
            "es2016.array.include",
            "es2017.object",
        ],
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false // Needed to compile tap and ansi-escapes
    },
    "include": [
        "./src/**/*",
    ]
}
